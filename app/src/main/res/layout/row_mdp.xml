<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
            android:id="@+id/iconMdp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:background="#AAA" app:srcCompat="@drawable/key_icon"/>

    <TextView
            android:id="@+id/titreMdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iconMdp"
            android:layout_alignTop="@+id/iconMdp"
            android:textStyle="bold"
            tools:text="Titre" android:textSize="18sp" android:layout_alignParentEnd="true"
            android:textAlignment="center"/>

    <TextView android:id="@+id/loginMdp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@android:color/black"
              android:layout_alignLeft="@+id/titreMdp"
              android:layout_below="@+id/titreMdp"
              tools:text="Login" />
</RelativeLayout>