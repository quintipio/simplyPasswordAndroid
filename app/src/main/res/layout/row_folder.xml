<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/iconFolder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:background="#AAA" app:srcCompat="@drawable/folder_icon"/>

    <TextView
            android:id="@+id/nomDossier"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iconFolder"
            android:layout_alignTop="@+id/iconFolder"
            android:textStyle="bold"
            tools:text="Nom de dossier" android:textAlignment="center" android:textSize="24sp"
            android:layout_alignBottom="@+id/iconFolder" android:layout_alignParentEnd="true"/>

</RelativeLayout>